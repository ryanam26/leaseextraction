{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist-server",
    "allowSyntheticDefaultImports": true
  },
  "include": ["server.ts", "pdf.ts"],
  "ts-node": {
    "esm": true
  }
} 